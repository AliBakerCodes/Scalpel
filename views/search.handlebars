<div class="row">
    <div class="container">
        <h2> Searched: {{term}}</h2>
        <div class="row">
             {{#each items as |item|}}
            <div class="card col-md-4 border-light">
                <div class="card-body">
                    <a href='/item/{{item.id}}'><img class="card-img-top" src="/images/{{item.image}}" alt="{{item.name}}"/></a>
                    <h5 class="card-title text-center pt-3">{{item.name}}</h5>
                    <p>Price: ${{item.rental_price}}</p>
                    <p>Rate:</p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

